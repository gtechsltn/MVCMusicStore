<!DOCTYPE html>
<html>
<head>
	<title>Cửa hàng Âm nhạc</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<link href="~/Content/Site.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.4.1.slim.min.js"></script>
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/modernizr-2.8.3.js"></script>
	<script src="~/Scripts/bootstrap.bundle.min.js"></script>
	@{
		string username = "";
		if (Request.Cookies["UserCookies"] != null)
		{
			username = Request.Cookies["UserCookies"].Value;
		}
	}
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
		<div class="container">
			<a href="@Url.Content("~")" class="navbar-brand">
				<img src="~/Content/Images/logo.png" alt="" />
				CỬA HÀNG ÂM NHẠC
			</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ml-auto">
					<li class="navbar-nav"><a href="@Url.Content("~")" class="nav-link">Trang chủ</a></li>
					<li><a href="/Store/" class="nav-link">Cửa hàng</a></li>
					<li class="nav-item">@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
					@if (username == "")
					{
						<li class="nav-item"><a href="/Account/LogOn" class="nav-link">Đăng nhập</a></li>
					}
					else if (username == "Administrator")
					{
						<li class="nav-item"><a href="@Url.Content("~/StoreManager/")" class="nav-link">Trang quản trị</a></li>
						<li class="nav-item">
							<a href="@Url.Content("~/Account/LogOff")" class="nav-link">Đăng xuất</a>
						</li>
					}
					else
					{
						<li class="nav-item"><a class="nav-link">Chào @username</a></li>
						<li class="nav-item">
							<a href="@Url.Content("~/Account/LogOff")" class="nav-link">Đăng xuất</a>
						</li>
					}
					<li class="nav-item"><a href="/Home/Contact" class="nav-link">Liên hệ</a></li>
					<li class="nav-item"><a href="/Home/About" class="nav-link">Giới thiệu</a></li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="d-flex" id="wrapper">
		<div class="bg-light border-right" id="sidebar-wrapper">
			<div class="sidebar-heading">Thể loại</div>
			<div class="list-group list-group-flush">
				@{Html.RenderAction("GenreMenu", "Store");}
			</div>
		</div>
		<div id="page-content-wrapper">
			<div class="container-fluid">
				@RenderBody()
			</div>
		</div>
	</div>
	<div class="row w-100">
		<div class="col-12 py-3" id="footer">
			<p>Built with <a href="https://dotnet.microsoft.com/apps/aspnet/mvc" target="_blank">ASP.NET MVC 5 - La Quoc Thang</a></p>
			<p>You can reference at <a href="https://web.csulb.edu/~pnguyen/cecs475/labs/mvc-music-store-tutorial-v30.pdf" target="_blank">here</a> and <a href="https://archive.codeplex.com/?p=mvcmusicstore" target="_blank">here</a></p>
		</div>
	</div>
</body>
</html>
