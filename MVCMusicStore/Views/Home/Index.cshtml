@model IEnumerable<MVCMusicStore.Models.Album>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Index";
}

<style>
	.carousel-indicators li {
		background-color: #c1cbdb;
	}

		.carousel-indicators li .active {
			background-color: #5b616b;
		}
</style>

<div id="carousel" class="carousel slide center" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#carousel" data-slide-to="0" class="active"></li>
		<li data-target="#carousel" data-slide-to="1"></li>
		<li data-target="#carousel" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="d-block w-100" src="~/Content/Images/home-showcase.png" alt="First slide">
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="~/Content/Images/1.png" alt="Second slide">
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="~/Content/Images/2.png" alt="Third slide">
		</div>
	</div>
	<a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<h3 style="text-align:center;margin:1rem;">
	<em>Tuôn trào</em> sức sống với những bản nhạc <em>hot nhất</em> hiện nay
</h3>
<ul id="album-list" style="width:80%;margin:auto;">
	@foreach (var album in Model)
	{
		<li>
			<a class="glyphicon glyphicon-refresh" href="@Url.Action("Details", "Store", new { id = album.AlbumId })">
				<img alt="@album.Title" src="@album.AlbumArtUrl" />
				<span>@album.Title</span>
			</a>
		</li>
	}
</ul>